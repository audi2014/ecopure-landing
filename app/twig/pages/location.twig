            </ul>
            <ul class="methodology_item">
                <li class="item_workingroom">
                    <div class="img_methodology"></div>
                    <h5>{{ content.methodology.methodology_items.workingroom.title }}</h5>
                    <div class="methodology_desc">
                        <h6>
                            <img src="{{ content.methodology.methodology_items.workingroom.img }}">
                            {{ content.methodology.methodology_items.bedroom.title }}
                        </h6>
                        <ul>

                            {% for item in content.methodology.methodology_items.workingroom.desc_list %}
                                <li><span>{{ item }}</span></li>
                            {% endfor %}
                            
