                    </div>
                </li>
                <li class="item_babyroom">
                    <div class="img_methodology"></div>
                    <h5>{{ content.methodology.methodology_items.babyroom.title }}</h5>
                    <div class="methodology_desc">
                        <h6>
                            <img src="{{ content.methodology.methodology_items.babyroom.img }}">
                            {{ content.methodology.methodology_items.bedroom.title }}
                        </h6>
                        <ul>

                            {% for item in content.methodology.methodology_items.babyroom.desc_list %}
