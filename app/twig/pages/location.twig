                    <div class="methodology_desc">
                        <h6>
                            <img src="{{ content.methodology.methodology_items.services.img }}">
                            {{ content.methodology.methodology_items.services.title }}
                        </h6>
                        <ul>

                            {% for item in content.methodology.methodology_items.services.desc_list %}
                                <li><span>{{ item }}</span></li>
                            {% endfor %}
                            
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
<!--/METHODOLOGY-->

<!--FLEXIBLE PLANS-->
<div class="flexible_plans">
    <div class="container">
        <h2>{{ content.flexible_plans.head }}</h2>

        <h3>{{ content.flexible_plans.text }}</h3>
        <a href="{{ content.flexible_plans.book_link }}" class="green_radius_btn">Book Now</a>
    </div>
</div>
