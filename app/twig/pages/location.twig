{% extends "twig/index.twig" %}
{# layout.twig #}
{% block content %}

<!--MAIN SCREEN-->
<div class="main_screen where_hiring_main_screen">
    <div class="container">
        <div class="text_center">
            <h1>{{ content.hiring_main.head }}</h1>
            <div class="buttons_wrap">
                <a href="{{ content.hiring_main.pricing_link }}" class="blue_radius_btn_border">Pricing</a>
                <a href="{{ content.hiring_main.book_link }}" class="green_radius_btn_border">Book Now</a>
            </div>
            <h5>{{ content.hiring_main.caption }} <sup>TM</sup></h5>
        </div>
        <!--<img src="{{ site.assets }}/img/icons/main_screen_down_arrow_white.svg" class="arrow">-->
        <a href="#about" class="arrow_down"><i class="fa fa-angle-down" aria-hidden="true"></i></a>

    </div>
</div>
<!--/MAIN SCREEN-->

<!--ABOUT-->
<div id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col_left">
                <h2>{{  content.about.head }}</h2>
                <p>{{ content.about.text_p1 }}</p>
                <p>{{ content.about.text_p2 }}</p>
            </div>
            <div class="col-lg-5 col_right">
                <div class="plans_wrap">
                    <h2>{{ content.about.plans.title }}</h2>
                    <h5>{{ content.about.plans.desc }}</h5>
                    <p>{{ content.about.plans.plan_1 }}</p>
                    <p>{{ content.about.plans.plan_2 }}</p>
                    <p>{{ content.about.plans.plan_3 }}</p>
                    <span>{{ content.about.plans.caption }}</span>
                    <a href="{{ content.about.plans.redeem_link }}" class="green_radius_btn">Redeem Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ABOUT-->

<!--LOVE-->
<div class="love">
    <div class="container">
        <h2>{{ content.love.head }}</h2>
        <p>{{ content.love.text }}</p>
    </div>
</div>
<!--/LOVE-->

<!--PROCESS-->
<div class="process">
    <div class="container">
        <h2>{{ content.process.head }}</h2>
        <ul>

            {% for item in content.process.process_list %}
                <li>
                    <img src="{{ item.img }}">
                    <h5>{{ item.title }}</h5>
                </li>
            {% endfor %}

        </ul>
    </div>
</div>
<!--/PROCESS-->

<!--METHODOLOGY-->
