                                <li><span>{{ item }}</span></li>
                            {% endfor %}
                            
                        </ul>
                    </div>
                </li>
                <li class="item_bedroom">
                    <div class="img_methodology"></div>
                    <h5>{{ content.methodology.methodology_items.bedroom.title }}</h5>
                    <div class="methodology_desc">
                        <h6>
