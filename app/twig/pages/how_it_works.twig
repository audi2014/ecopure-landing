{% extends "twig/index.twig" %}
{# how_it_works.twig #}
{% block content %}

<!--HOW IT WORKS PAGE-->
<div class="how_it_works_page">
	<div class="container">
		<h2>{{ content.how_it_works_page.head }}</h2>

		<div class="row no-gutters">
			<div class="col-lg-5">
				<div class="left_item">
					<img class="img-fluid" src="{{ content.how_it_works_page.steps.step_1.img }}">
				</div>
			</div>
			<div class="col-lg-2 col_center">
				<div class="step_wrap green_wrap">
					<span>step</span>
					<div class="step_circle">1</div>
					<div class="dashed_bottom"></div>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="right_item">
					<div class="desc_wrap">
						<h4>{{ content.how_it_works_page.steps.step_1.title }}</h4>
						<p>{{ content.how_it_works_page.steps.step_1.text }}</p>
						<a class="green_radius_btn" href="{{ content.how_it_works_page.steps.step_1.link.path }}">
							{{ content.how_it_works_page.steps.step_1.link.title }}
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row no-gutters">
			<div class="col-lg-5 order-lg-3">
				<div class="right_item">
					<img class="img-fluid" src="{{ content.how_it_works_page.steps.step_2.img }}">
				</div>
			</div>
			<div class="col-lg-2 order-lg-2 col_center">
				<div class="step_wrap green_wrap">
