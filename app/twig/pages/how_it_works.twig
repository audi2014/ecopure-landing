<!--BENEFITS-->
<div class="benefits">
	<div class="container">
		<h2>{{ benefits.head }}</h2>
		<div class="benefits_wrap">
			<div class="row">

				{% for item in content.benefits.benefits_list %}
					<div class="col-lg-4 col-sm-6">
						<div class="img_wrap">
							<img src="{{ item.img }}">
						</div>
						<h4>{{ item.title }}</h4>
						<p>{{ item.text }}</p>
					</div>
				{% endfor %}

			</div>
		</div>

	</div>
</div>
