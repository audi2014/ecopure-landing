					<div class="step_circle">2</div>
					<div class="dashed_bottom"></div>
				</div>
			</div>
			<div class="col-lg-5 order-lg-1">
				<div class="left_item">
					<div class="desc_wrap">
						<h4>{{ content.how_it_works_page.steps.step_2.title }}</h4>
						<p>{{ content.how_it_works_page.steps.step_2.text }}</p>
						<a class="green_radius_btn" href="{{ content.how_it_works_page.steps.step_2.link.path }}">
							{{ content.how_it_works_page.steps.step_2.link.title }}
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row no-gutters">
			<div class="col-lg-5">
				<div class="left_item">
					<img class="img-fluid" src="{{ content.how_it_works_page.steps.step_3.img }}">
				</div>
			</div>
			<div class="col-lg-2 col_center">
				<div class="step_wrap green_wrap">
					<span>step</span>
					<div class="step_circle">3</div>
					<div class="dashed_bottom"></div>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="right_item">
					<div class="desc_wrap">
						<h4>{{ content.how_it_works_page.steps.step_3.title }}</h4>
						<p>{{ content.how_it_works_page.steps.step_3.text }}</p>
						<a class="green_radius_btn" href="{{ content.how_it_works_page.steps.step_3.link.path }}">
							{{ content.how_it_works_page.steps.step_3.link.title }}
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row no-gutters">
			<div class="col-lg-5 order-lg-3">
				<div class="right_item">
					<img class="img-fluid" src="{{ content.how_it_works_page.steps.step_4.img }}">
				</div>
			</div>
			<div class="col-lg-2 order-lg-2 col_center">
